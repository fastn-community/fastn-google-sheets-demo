-- import: hack/assets


;; Header component

-- component header:

-- ftd.row:
width: fill-container
spacing: space-between
align-content: center

-- ftd.text: hackathon
link: /
role: $inherited.types.heading-large
color: #ffffff

-- ftd.row:
width: fill-container
align-content: right
spacing.fixed.rem: 2

